extends layout

block content
  h1 Welcome To Triund Trek 
  .form-body
    .row
      .form-holder
        .form-content
          .form-items
            h3 Register Today
            p Fill in the data below.
            form(action='/register' method='post')
              .col-md-12
                input.form-control(type='text' name='t1' placeholder='Full Name' required='')
                .valid-feedback Username field is valid!
                .invalid-feedback Username field cannot be blank!
              .col-md-12
                input.form-control(type='email' name='t2' placeholder='E-mail Address' required='')
                .valid-feedback Email field is valid!
                .invalid-feedback Email field cannot be blank!
              .col-md-12
                input.form-control(type='password' name='t3' placeholder='Password' required='')
                .valid-feedback Password field is valid!
                .invalid-feedback Password field cannot be blank!
              .form-check
                input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                label.form-check-label I confirm that all data are correct
                .invalid-feedback Please confirm that the entered data are all correct!
              .form-button.mt-3
                button#submit.btn.btn-primary(type='submit', onclick='register') Register
              a.btn.text-white.bg-success.mt-4 Next

